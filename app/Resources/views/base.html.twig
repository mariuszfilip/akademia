<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('styles/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('styles/css/app.min.css') }}" rel="stylesheet">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{% block navbar %}
    {{ render(controller('AppBundle:Default:navbar')) }}
{% endblock %}

{% block body %}

{% endblock %}
</body>

<footer>
    {% block javascripts %}

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

        <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>

        <script>

            $(document).ready(function(){

                $('#about').click(function(){
                    jQuery.ajax({
                        url: "{{ top_url }}/calculate/proposal",
                        method: 'GET',
                        async:true,
                        dataType: 'json'
                    }).done(function (data) {

                        console.log(data);
                        if(data.status == 1){
                            alert("status poprawny "+data.info);
                        }else{
                            alert(data.info);
                        }
                    }).fail(function () {
                        alert('Błąd systemu. Nie dodano produktu');
                    });
                    alert('poszlo');
                })

            });

        </script>
    {% endblock %}
</footer>
</html>
